@using PhotoSpeech.Providers
@inherits LayoutComponentBase
@inject LoggedUserProvider _loggedUserProvider
@inject NavigationManager NavigationManager

<PageTitle>PhotoSpeech</PageTitle>

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Color="Color.Primary" Fixed="false">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="Menu" />
        <MudIconButton Icon="@Icons.Material.Filled.VideogameAsset" Color="Color.Inherit" OnClick="Categories"/>
        <MudIconButton Icon="@Icons.Material.Filled.Scoreboard" Color="Color.Inherit" OnClick="Ranking"/>
            <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Login" Color="Color.Inherit" OnClick="Logout"/>
    </MudAppBar>

    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {

    private void Menu() {
        NavigationManager.NavigateTo("");
    }

    private void Categories() {
        NavigationManager.NavigateTo("/categories");
    }

    private void Logout() {
        _loggedUserProvider.LogUserOut();
        NavigationManager.NavigateTo("/login");
    }

    private void Ranking() {
        NavigationManager.NavigateTo("/ranking");
    }
}
